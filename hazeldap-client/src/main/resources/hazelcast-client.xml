<?xml version="1.0" encoding="UTF-8"?>
<hazelcast-client xsi:schemaLocation="http://www.hazelcast.com/schema/client-config hazelcast-client-config-3.12.xsd"
                  xmlns="http://www.hazelcast.com/schema/client-config"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <properties>
    <property name="hazelcast.client.statistics.enabled">true</property>
    <property name="hazelcast.application.validation.token">MyToken334</property>
    <property name="hazelcast.client.heartbeat.timeout">1000</property>
    <property name="hazelcast.client.heartbeat.interval">200</property>
  </properties>

<!--  <import resource="client-license-key.xml"/>-->

  <group>
    <name>dev</name>
    <password>dev-pass-ignored</password>
  </group>

  <network>
    <cluster-members>
      <!-- Configure the configuration to be made to localhost only -->
      <address>127.0.0.1:5901</address>
      <address>127.0.0.1:5902</address>
    </cluster-members>

<!--    <ssl enabled="true">-->
<!--      <factory-class-name>com.hazelcast.nio.ssl.BasicSSLContextFactory</factory-class-name>-->
<!--      <properties>-->
<!--        <property name="keyStore">./ssl/hazelcast.ks</property>-->
<!--        <property name="keyStorePassword">password</property>-->
<!--        <property name="mutualAuthentication">OPTIONAL</property>-->
<!--        <property name="protocol">TLSv1.2</property>-->
<!--        <property name="javax.net.ssl.trustStore">./ssl/hazelcast.ts</property>-->
<!--      </properties>-->

<!--    </ssl>-->


    <smart-routing>true</smart-routing>
    <redo-operation>true</redo-operation>
    <connection-timeout>60000</connection-timeout>
    <connection-attempt-period>3000</connection-attempt-period>
    <connection-attempt-limit>2</connection-attempt-limit>

  </network>


  <near-cache name="default">
    <invalidate-on-change>true</invalidate-on-change>
    <in-memory-format>OBJECT</in-memory-format>
  </near-cache>

</hazelcast-client>